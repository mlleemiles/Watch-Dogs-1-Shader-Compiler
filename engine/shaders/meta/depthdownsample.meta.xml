<?xml version="1.0" encoding="utf-8" ?>
<metashader>

    <samplerstate sampler="DepthSampler" state="DepthSampler" />	
    <compiler platform="ps3" type="fragment">-po OutColorPrec=fp32</compiler >

    <define name="MINMAX" />
    <define name="DEPTH_OUTPUT" />
    <define name="COLOR_OUTPUT" />

    <domain>
        <options>
            <option>COLOR_OUTPUT</option>
            <option>COLOR_OUTPUT,DEPTH_OUTPUT</option>
            <option>COLOR_OUTPUT,MINMAX</option>
            <option>COLOR_OUTPUT,DEPTH_OUTPUT,MINMAX</option>
        </options>
    </domain>
    
</metashader>